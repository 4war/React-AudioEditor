{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
                
        //Для относительных путей импортов
        "baseUrl": ".",
        "paths": {
          "*": ["./src/*"]
        },

        //Для удобного синтаксиса import вместо require (commonJs)
        "esModuleInterop": true,

        //export Default или именнованный export, чтобы не писать * в импортах
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
  }