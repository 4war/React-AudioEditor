{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        
        //Для относительных путей импортов
        "baseUrl": ".",

        //Для удобного синтаксиса import вместо require (commonJs)
        "esModuleInterop": true,

        //export Default или именнованный export, чтобы не писать * в импортах
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
  }